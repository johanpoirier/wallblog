{{#if dailymotion}}
<iframe src="//www.dailymotion.com/embed/video/{{videoId}}?html=1&info=0&logo=0&related=0"
{{/if}}
{{#if youtube}}
    <iframe id="ytplayer" type="text/html" src="http://www.youtube.com/embed/{{videoId}}?autoplay=0&showinfo=0&playsinline=1"
{{/if}}
{{#if vimeo}}
    <iframe src="//player.vimeo.com/video/{{videoId}}?title=0"
{{/if}}
        width="{{width}}"
        height="{{height}}"
        frameborder="0"
        webkitallowfullscreen mozallowfullscreen allowfullscreen>
</iframe>
{{#if model.date}}
    <span class="date">{{formatDate model.date labels.dateFormat}}</span>
{{/if}}
{{#if model.description}}
    <span class="description">{{model.description}}</span>
{{/if}}