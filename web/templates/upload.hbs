<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">{{labels.uploadTitle}}</h3>
</div>
<div class="modal-body">
    <form class="form-horizontal">
        <div class="control-group">
        {{#each pictures}}
            <div class="upload-image">
                <div class="upload-image-zone">
                    <img src="{{this.data}}" alt="{{this.filename}}" />
                </div>
                <input type="text" name="description-{{this.id}}" placeholder="{{../labels.enterDescription}}" />
            </div>
        {{/each}}
        </div>
        <div class="control-group pull-right">
            <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">{{labels.cancel}}</button>
            <button type="submit" class="btn btn-success"><i class="icon-ok icon-white"></i> {{labels.uploadPictures}}</button>
        </div>
    </form>
</div>