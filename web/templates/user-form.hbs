<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">{{labels.newUser}}</h3>
</div>
<div class="modal-body">
    <p>{{labels.infoNewUser}}</p>
    <p>&nbsp;</p>
    <form class="form-horizontal">
        <div class="control-group" id="groupEmail">
            <label class="control-label" for="email">{{labels.email}}</label>
            <div class="controls">
                <input type="email" name="email" id="email" value="" placeholder="{{labels.email}}">
                <span class="help-inline hide">{{labels.emailError}}</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="password">{{labels.password}}</label>
            <div class="controls">
                <input type="password" name="password" id="password" value="" placeholder="{{labels.password}}">
            </div>
        </div>
        <div class="control-group" id="groupRepeatPassword">
            <label class="control-label" for="password">{{labels.repeatPassword}}</label>
            <div class="controls">
                <input type="password" name="repeatPassword" id="repeatPassword" value="" placeholder="{{labels.password}}">
                <span class="help-inline hide">{{labels.passwordsNotIdenticals}}</span>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">{{labels.cancel}}</button>
    <button class="btn btn-primary">{{labels.validate}}</button>
</div>