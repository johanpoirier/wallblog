{{partial 'header-zoom'}}
<div class="main container-fluid">
    <div class="row full-height">
        <div class="col-md-9">
            <div class="picture">
                {{#link-to 'items'}}
                    <img src="http://wallblog.jops-dev.com/pictures/{{unbound file}}" alt="" />
                {{/link-to}}
            </div>
        </div>
        <div class="col-md-3 commentBar">
            <h4>{{t 'comments'}}</h4>
            {{view 'Wallblog.CommentFormView'}}
            <div class="row comments">
            {{#each sortedComments itemController='comment'}}
                {{partial 'comment'}}
            {{/each}}
            </div>
        </div>
    </div>
</div>