<div class="item">
    {{#link-to 'item' this}}
        <img src="http://wallblog.jops-dev.com/pictures/m2_{{unbound file}}" alt="{{unbound file}}" id="{{unbound id}}" class="wall" />
    {{#if date}}
        <span class="date">{{format-date date 'D MMMM YYYY'}}</span>
    {{/if}}
    {{#if comments}}
        <span class="nb-comments">{{comments.length}}</span>
    {{/if}}
    {{#if description}}
        <span class="description">{{description}}</span>
    {{/if}}
    {{/link-to}}
</div>