<header>
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-inner">
            {{#link-to 'items' class="navbar-brand"}}
                <img src="img/logo_m.png" alt="Logo" />
            {{/link-to}}
            <span class="date">{{format-date date 'D MMMM YYYY'}}</span>
            <span class="description">
            {{#if description}} : {{description}} {{else}}
                {{#if controllers.application.isLogged}} : {{t addDescription}} {{/if}}
            {{/if}}
            </span>
        {{#if controllers.application.isLogged}}
            <span class="delete" style="display: inline;">
                {{t 'deletePicture'}}
            </span>
        {{/if}}
        </div>
    </div>
</header>