<div class="click-overlay" style="width:{{width}}px;height:{{height}}px;"></div>
{{#if dailymotion}}
    <iframe src="//www.dailymotion.com/embed/video/{{videoId}}?html=1&info=0&logo=0&related=0&chromeless=1"
{{else if youtube}}
    <iframe id="ytplayer" type="text/html" src="http://www.youtube.com/embed/{{videoId}}?autoplay=0&showinfo=0&playsinline=1&fs=0&rel=0&theme=light"
{{else if vimeo}}
    <iframe src="//player.vimeo.com/video/{{videoId}}?title=0&chromeless=1&badge=0"
{{else}}
    <iframe src="/pictures/empty.jpg"
{{/if}}
        width="{{width}}"
        height="{{height}}"
        frameborder="0"
        webkitallowfullscreen mozallowfullscreen allowfullscreen>
    </iframe>
{{#if model.date}}
    <span class="date">{{formatDate model.date labels.dateFormat}}</span>
{{/if}}
{{#if model.comments}}
    <span class="nb-comments">{{model.comments.length}} <i class="icon-comment"></i></span>
{{/if}}
{{#if model.description}}
    <span class="description">{{model.description}}</span>
{{/if}}
