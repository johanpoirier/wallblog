<div class="click-overlay" style="width:{{model.width}}px;height:{{model.height}}px;"></div>
{{#if dailymotion}}
    <iframe src="//www.dailymotion.com/embed/video/{{videoId}}?html=1&info=0&logo=0&related=0&chromeless=1"
{{else if youtube}}
    <iframe id="ytplayer" type="text/html" src="//www.youtube.com/embed/{{videoId}}?autoplay=0&showinfo=0&modestbranding=1&playsinline=1&fs=1&rel=0&theme=light"
{{else if vimeo}}
    <iframe src="//player.vimeo.com/video/{{videoId}}?title=0&chromeless=1&badge=0"
{{else}}
    <iframe src="/pictures/empty.jpg"
{{/if}}
        width="{{model.width}}"
        height="{{model.height}}"
        frameborder="0"
        webkitallowfullscreen mozallowfullscreen allowfullscreen>
    </iframe>
{{#if model.date}}
    <span class="date">{{formatDate model.date labels.dateFormat}}</span>
{{/if}}
    <span class="likes">
    {{#unlessequals model.likes '0'}}
        {{model.likes}}
    {{/unlessequals}}
        {{#if liked}}<i class="icon-heart"></i>{{else}}<i class="icon-heart-empty"></i>{{/if}}
    </span>
{{#if model.description}}
    <span class="description">{{model.description}}</span>
{{/if}}
